<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WelcomeTour.Container" parent="@style/WelcomeTour">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">@dimen/welcome_tour_container_width</item>
        <item name="android:layout_height">@dimen/welcome_tour_container_height</item>
    </style>
    <style name="WelcomeTour.ImageArea" parent="@style/WelcomeTour">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_marginTop">@dimen/welcome_tour_image_margin_top</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="WelcomeTour.ImageContainer" parent="@style/WelcomeTour">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="WelcomeTour.ContentArea" parent="@style/WelcomeTour">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/welcome_tour_content_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/welcome_tour_content_padding_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="WelcomeTour.Text.Aligned" parent="@style/WelcomeTour.Text">
        <item name="android:gravity">center</item>
    </style>
    <style name="WelcomeTour.Text.Large.Aligned" parent="@style/WelcomeTour.Text.Large">
        <item name="android:gravity">center</item>
    </style>
    <style name="WelcomeTour.Text.Title.Aligned" parent="@style/WelcomeTour.Text.Title">
        <item name="android:gravity">center</item>
    </style>
</resources>
