<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/rte_button_background" />
    <item>
        <selector>
            <item android:state_enabled="true">
                <bitmap android:gravity="center" android:src="@drawable/quantum_ic_format_color_fill_black_24" android:alpha="@dimen/rte_toolbar_button_enabled_alpha" />
            </item>
            <item android:state_enabled="false">
                <bitmap android:gravity="center" android:src="@drawable/quantum_ic_format_color_fill_black_24" android:alpha="@dimen/rte_toolbar_button_disabled_alpha" />
            </item>
        </selector>
    </item>
</layer-list>