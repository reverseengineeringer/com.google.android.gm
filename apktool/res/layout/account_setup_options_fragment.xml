<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/account_setup_options_mail_check_frequency_label" style="@style/AccountSetupLabelText" />
    <Spinner android:id="@id/account_check_frequency" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/AccountSettingsSpinner" />
    <TextView android:id="@id/account_sync_window_label" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/account_setup_options_mail_window_label" style="@style/AccountSetupLabelText" />
    <Spinner android:id="@id/account_sync_window" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/AccountSettingsSpinner" />
    <CheckBox android:id="@id/account_notify" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/account_setup_options_notify_label" style="@style/AccountSetupOptionsCheckbox" />
    <CheckBox android:id="@id/account_sync_contacts" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/account_setup_options_sync_contacts_label" style="@style/AccountSetupOptionsCheckbox" />
    <CheckBox android:id="@id/account_sync_calendar" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/account_setup_options_sync_calendar_label" style="@style/AccountSetupOptionsCheckbox" />
    <CheckBox android:id="@id/account_sync_email" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/account_setup_options_sync_email_label" style="@style/AccountSetupOptionsCheckbox" />
    <CheckBox android:id="@id/account_background_attachments" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/account_setup_options_background_attachments_label" style="@style/AccountSetupOptionsCheckbox" />
</LinearLayout>